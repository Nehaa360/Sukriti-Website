<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sukriti Interiors</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.12/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <div class="container-fluid px-0">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-overlay">
                <div class="container">
                    <div class="hero-content">
                        <h1>Sukriti Interiors</h1>
                        <p class="lead">Elevating spaces with minimalist elegance</p>
                        <a href="#projects" class="btn btn-outline-light btn-lg mt-3">View Our Work</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section id="projects" class="projects-section py-5">
            <div class="container">
                <div class="section-header text-center mb-5">
                    <h2 class="section-title">Our Portfolio</h2>
                    <p class="section-subtitle">Crafted spaces that inspire</p>
                </div>

                <div class="row g-4">
                    @foreach (var project in Model)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="project-card">
                                <div class="project-image">
                                    <img src="@project.ImageUrl" alt="@project.Title" class="img-fluid" loading="lazy" class="lazyload">
                                    <div class="project-overlay">
                                        <div class="overlay-content">
                                            <h3>@project.Title</h3>
                                            <p>@project.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section class="about-section py-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 mb-4 mb-lg-0">
                        <div class="about-image">
                            <img src="https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" alt="About Us" class="img-fluid rounded" loading="lazy" class="lazyload">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-content">
                            <h2 class="section-title">Our Philosophy</h2>
                            <p>We believe in creating spaces that blend functionality with aesthetic appeal. Our designs reflect a harmony between modern minimalism and timeless elegance.</p>
                            <p>Each project is approached with meticulous attention to detail, ensuring every element contributes to a cohesive and inspiring environment.</p>
                            <div class="signature mt-4">
                                <p class="mb-0">- Sukriti Interiors Team</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="contact-section py-5">
            <div class="container">
                <div class="section-header text-center mb-5">
                    <h2 class="section-title">Get In Touch</h2>
                    <p class="section-subtitle">Let's create something beautiful together</p>
                </div>

                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <form method="post" asp-action="Enquiry" class="contact-form">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <input type="text" name="Name" class="form-control" placeholder="Your Name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <input type="email" name="Email" class="form-control" placeholder="Your Email" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <textarea name="Message" class="form-control" placeholder="Your Message" rows="5" required></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Social Section -->
        <section class="social-section py-4">
            <div class="container text-center">
                <h3 class="mb-4">Follow Our Journey</h3>
                <div class="social-links">
                    <a href="https://www.instagram.com/YOUR_HANDLE" target="_blank" class="social-icon">
                        <img src="/images/newinsta2.webp" alt="Instagram">
                    </a>
                    
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0">&copy; @DateTime.Now.Year Sukriti Interiors. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <p class="mb-0">Designed with <span class="text-heart">♥</span> by Neha K.</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        window.onload = function () {
            const message = '@TempData["Success"]';
            if (message) {
                Swal.fire({
                    title: 'Message Sent!',
                    text: message,
                    icon: 'success',
                    confirmButtonText: 'OK',
                    background: '#f5f5f5',
                    confirmButtonColor: '#6b4c3b'
                });
            }
        };
    </script>
